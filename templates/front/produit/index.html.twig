{% extends 'partials/layout.html.twig' %}

{% block title %}Devis index
{% endblock %}

{% block main %}
	<div class="sm:flex sm:items-center">
		<div class="sm:flex-auto">
			<h1 class="text-base font-semibold leading-6 text-gray-900">Produit </h1>
			<p class="mt-2 text-sm text-gray-700">Liste des produits</p>
		</div>
		<div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
			<a href="{{ path('front_app_produit_new') }}"
			   class="block rounded-md bg-secondary px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-secondary/90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Ajouter
				Produit</a>
		</div>
	</div>
	<div class="mt-8 flow-root">
		<div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
			<div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
				<div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
					<table class="min-w-full divide-y divide-gray-300 px-3">
						<thead class="bg-secondary">
						<tr>
							<th scope="col"
								class="py-3.5 px-3 text-left text-sm font-semibold text-white">
								Numéro
							</th>
							<th scope="col" class="px-4 py-3.5 text-left text-sm font-semibold text-white">Nom
							</th>
							<th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white">
								Prix HT
							</th>
							<th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white">Total
								TVA
							</th>
							<th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white">
								Montant
							</th>
							<th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-0 text-white">
								Actions
							</th>
						</tr>
						</thead>
						<tbody class="divide-y divide-gray-200">
						{% for produit in produits %}
							<tr>
								<td class="whitespace-nowrap py-4 px-4 text-sm font-medium text-gray-900">{{ produit.id }}</td>
								<td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{{ produit.name }}</td>
								<td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{{ produit.prixHt }}</td>
								<td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{{  produit.tva }}</td>
								<td class="whitespace-nowrap px-3 py-4 text-sm">{{ produit.montant }}</td>
								<td class=" flex flex-1 space-x-2 items-center justify-center relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0">
									<a href="{{ path('front_app_produit_show', {'id': produit.id}) }}"
									   class="bg-primary hover:primary/80 p-2 text-white rounded-full">
										<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
											 stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
											<path stroke-linecap="round" stroke-linejoin="round"
												  d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m5.231 13.481L15 17.25m-4.5-15H5.625c-.621 0-1.125.504-1.125 1.125v16.5c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9zm3.75 11.625a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z"/>
										</svg>
									</a>
									<a href="{{ path('front_app_produit_edit', {'id': produit.id}) }}"
									   class="bg-secondary hover:bg-secondary p-2 text-white rounded-full">
										<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
											 stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
											<path stroke-linecap="round" stroke-linejoin="round"
												  d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"/>
										</svg>
									</a>
									<a href="{{ path('front_app_produit_delete', {'id': produit.id}) }}"
									   class="bg-red-600 hover:bg-red-800 p-2 text-white rounded-full">
										<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
											 stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
											<path stroke-linecap="round" stroke-linejoin="round"
												  d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"/>
										</svg>
									</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="9">Aucun Produit trouvé</td>
							</tr>
						{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

