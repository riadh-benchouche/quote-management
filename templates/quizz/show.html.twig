{% extends 'base.html.twig' %}

{% block title %}Quizz{% endblock %}

{% block body %}
    <h1>Quizz</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ quizz.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ quizz.name }}</td>
            </tr>
        </tbody>
    </table>

    {% for question in quizz.questions %}
        {{ question.question }} <br><br>
    {% endfor %}

    <a href="{{ path('app_quizz_index') }}">back to list</a>

    <a href="{{ path('app_quizz_edit', {'slug': quizz.slug}) }}">edit</a>

    {{ include('quizz/_delete_form.html.twig') }}
{% endblock %}
