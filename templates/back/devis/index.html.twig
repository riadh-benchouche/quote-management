{% extends 'partials/layout.html.twig' %}

{% block title %}Devis index
{% endblock %}

{% block main %}
        <div class="sm:flex sm:items-center">
            <div class="sm:flex-auto">
                <h1 class="text-base font-semibold leading-6 text-gray-900">Devis </h1>
                <p class="mt-2 text-sm text-gray-700">Liste des devis avec les informations principales</p>
            </div>
            <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
                <a href="{{ path('back_app_devis_new') }}"
                   class="block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Ajouter
                    devis</a>
            </div>
        </div>
        <div class="mt-8 flow-root">
            <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
                    <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
                        <table class="min-w-full divide-y divide-gray-300 px-3">
                            <thead class="bg-primary">
                            <tr>
                                <th scope="col"
                                    class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900">
                                    Numéro
                                </th>
                                <th scope="col" class="px-4 py-3.5 text-left text-sm font-semibold text-gray-900">Client
                                </th>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Date
                                    de
                                    création
                                </th>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Total
                                    TTC
                                </th>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Statut
                                </th>
                                <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-0">
                                   Actions
                                </th>
                            </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200">
                            {% for devi in devis %}
                                <tr>
                                    <td class="whitespace-nowrap py-4 px-4 text-sm font-medium text-gray-900">{{ devi.id }}</td>
                                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{{ devi.client }}</td>
                                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{{ devi.date ? devi.date|date('Y-m-d') : '' }}</td>
                                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{{ devi.montant }}</td>
                                    <td class="whitespace-nowrap px-3 py-4 text-sm">
											<span class="
																								                                            {{devi.status  == 'brouillon' ? 'bg-gray-200 text-gray-600' : '' }}
																								                                            {{devi.status  == 'accepte' ? 'bg-green-200 text-green-600' : '' }}
																								                                            {{devi.status  == 'nonAccepte' ? 'bg-red-200 text-red-600' : '' }}
																								                                            {{devi.status  == 'facture' ? 'bg-green-200 text-green-600' : '' }}
																								                                             rounded-full px-4 py-1 font-semibold
																								                                            ">{{ devi.status }}</span>
										</td>
                                    <td class=" flex flex-1 space-x-1 items-center justify-center relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0">
                                        <a href="{{ path('back_app_devis_show', {'id': devi.id}) }}"
                                           class="text-indigo-600 hover:text-indigo-900">Voir</a>
                                        <a href="{{ path('back_app_devis_edit', {'id': devi.id}) }}"
                                           class="text-indigo-600 hover:text-indigo-900">Edit</a>
                                        <a href="{{ path('back_app_devis_delete', {'id': devi.id}) }}"
                                           class="text-red-600 hover:text-red-900">Supprimer</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="9">Aucun devis trouvé</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        {% endblock %}