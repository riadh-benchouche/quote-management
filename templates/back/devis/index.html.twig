{% extends 'base.html.twig' %}

{% block title %}Devis index
{% endblock %}

{% block body %}
	<h1>Devis index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Message</th>
				<th>Date</th>
				<th>Quantity</th>
				<th>PrixHt</th>
				<th>Tva</th>
				<th>Montant</th>
				<th>Status</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for devi in devis %}
				<tr>
					<td>{{ devi.id }}</td>
					<td>{{ devi.message }}</td>
					<td>{{ devi.date ? devi.date|date('Y-m-d') : '' }}</td>
					<td>{{ devi.quantity }}</td>
					<td>{{ devi.prixHt }}</td>
					<td>{{ devi.tva }}</td>
					<td>{{ devi.montant }}</td>
					<td>{{ devi.status }}</td>
					<td>
						<a href="{{ path('back_app_devis_show', {'id': devi.id}) }}">show</a>
						<a href="{{ path('back_app_devis_edit', {'id': devi.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="9">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('back_app_devis_new') }}">Create new</a>
{% endblock %}
