{% extends 'partials/layout.html.twig' %}

{% block title %}New Categorie
{% endblock %}

{% block main %}
	<div class="grid grid-cols-1 gap-x-8 gap-y-8 md:grid-cols-3">
		<div class="px-4 sm:px-0">
			<h2 class="text-base font-semibold leading-7 text-gray-900">Categories</h2>
			<p class="mt-1 text-sm leading-6 text-gray-600">Ajouter une nouvelle categorie pour les produits</p>
		</div>

		<form method="POST" class="bg-[#F1F1F1] shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl md:col-span-2">
			{{ form_start(form) }}
			<div class="px-4 py-6 sm:p-8">
				<div class="grid max-w-2xl grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
					<div class="sm:col-span-4">
						{{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}}) }}
						{{ form_widget(form.nom, {'attr': {'class': 'mt-2  w-full flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-secondary sm:max-w-md'}}) }}
						{{ form_errors(form.nom, {'attr': {'class': 'text-sm text-red-600'}}) }}
					</div>
				</div>
			</div>
			<div class="flex items-center justify-end gap-x-6 border-t border-gray-900/10 px-4 py-4 sm:px-8">
				<a href="{{ path('back_app_categorie_index') }}" class="text-sm font-semibold leading-6 text-gray-900">Annuler</a>
				<button type="submit"
						class="rounded-md bg-secondary px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500">
					Ajouter
				</button>
			</div>
			{{ form_end(form) }}
		</form>
	</div>
{% endblock %}
