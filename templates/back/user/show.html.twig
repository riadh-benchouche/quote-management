{% extends 'partials/layout.html.twig' %}

{% block title %}User{% endblock %}

{% block main %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td>
                    <img src="{{ vich_uploader_asset(user, 'avatarFile') }}" alt="{{ user.email }}">
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('back_app_user_index') }}">back to list</a>

    <a href="{{ path('back_app_user_edit', {'id': user.id}) }}">edit</a>

    {{ include('back/user/_delete_form.html.twig') }}
{% endblock %}
