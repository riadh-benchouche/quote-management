{% extends 'base.html.twig' %}

{% block title %}Facture index
{% endblock %}

{% block body %}
	<h1>Facture index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Message</th>
				<th>Date</th>
				<th>Quantity</th>
				<th>Echeance</th>
				<th>Status</th>
				<th>PrixHt</th>
				<th>Tva</th>
				<th>Montant</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for facture in factures %}
				<tr>
					<td>{{ facture.id }}</td>
					<td>{{ facture.message }}</td>
					<td>{{ facture.date ? facture.date|date('Y-m-d') : '' }}</td>
					<td>{{ facture.quantity }}</td>
					<td>{{ facture.echeance ? facture.echeance|date('Y-m-d') : '' }}</td>
					<td>{{ facture.status }}</td>
					<td>{{ facture.prixHt }}</td>
					<td>{{ facture.tva }}</td>
					<td>{{ facture.montant }}</td>
					<td>
						<a href="{{ path('back_app_facture_show', {'id': facture.id}) }}">show</a>
						<a href="{{ path('back_app_facture_edit', {'id': facture.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="10">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('back_app_facture_new') }}">Create new</a>
{% endblock %}
