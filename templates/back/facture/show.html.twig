{% extends 'base.html.twig' %}

{% block title %}Facture
{% endblock %}

{% block body %}
	<h1>Facture</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ facture.id }}</td>
			</tr>
			<tr>
				<th>Message</th>
				<td>{{ facture.message }}</td>
			</tr>
			<tr>
				<th>Date</th>
				<td>{{ facture.date ? facture.date|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Quantity</th>
				<td>{{ facture.quantity }}</td>
			</tr>
			<tr>
				<th>Echeance</th>
				<td>{{ facture.echeance ? facture.echeance|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Status</th>
				<td>{{ facture.status }}</td>
			</tr>
			<tr>
				<th>PrixHt</th>
				<td>{{ facture.prixHt }}</td>
			</tr>
			<tr>
				<th>Tva</th>
				<td>{{ facture.tva }}</td>
			</tr>
			<tr>
				<th>Montant</th>
				<td>{{ facture.montant }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('back_app_facture_index') }}">back to list</a>

	<a href="{{ path('back_app_facture_edit', {'id': facture.id}) }}">edit</a>

	{{ include('back/facture/_delete_form.html.twig') }}
{% endblock %}
