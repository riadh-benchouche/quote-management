{% extends 'partials/layout.html.twig' %}

{% block title %}Client index
{% endblock %}

{% block main %}
	<h1>Client index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Company_name</th>
				<th>Email</th>
				<th>Lastname</th>
				<th>Firstname</th>
				<th>Address</th>
				<th>Zipcode</th>
				<th>City</th>
				<th>Phone</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for client in clients %}
				<tr>
					<td>{{ client.id }}</td>
					<td>{{ client.companyName }}</td>
					<td>{{ client.email }}</td>
					<td>{{ client.lastname }}</td>
					<td>{{ client.firstname }}</td>
					<td>{{ client.address }}</td>
					<td>{{ client.zipcode }}</td>
					<td>{{ client.city }}</td>
					<td>{{ client.phone }}</td>
					<td>
						<a href="{{ path('back_app_client_show', {'id': client.id}) }}">show</a>
						<a href="{{ path('back_app_client_edit', {'id': client.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="10">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('back_app_client_new') }}">Create new</a>
{% endblock %}
